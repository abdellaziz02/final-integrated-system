{
  "version": 2,
  "builds": [
    {
      "src": "api_gateway/Dockerfile",
      "use": "@vercel/docker",
      "config": { "port": 8000 }
    },
    {
      "src": "nlp_service/Dockerfile",
      "use": "@vercel/docker",
      "config": { "port": 8000 }
    },
    {
      "src": "search-engine-service/Dockerfile",
      "use": "@vercel/docker",
      "config": { "port": 5000 }
    },
    {
      "src": "scraper_service/Dockerfile",
      "use": "@vercel/docker",
      "config": { "port": 8001 }
    },
    {
      "src": "product_ai_service/Dockerfile",
      "use": "@vercel/docker",
      "config": { "port": 8002 }
    },
    {
      "src": "enrichment_llm_service/Dockerfile",
      "use": "@vercel/docker",
      "config": { "port": 8003 }
    }
